<configuration>
    <springProperty name="SLACK_WEBHOOK_URI" source="logging.slack.webhook-uri"/>

    <appender name="SLACK" class="com.github.maricn.logback.SlackAppender">
        <webhookUri>{logging.slack.webhook-uri}</webhookUri>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} %msg %n
            </pattern>
        </layout>
        <username>G. F. 's Log.ging MoniT_Or </username>
        <colorCoding>true</colorCoding>
    </appender>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%-5level) %cyan(%logger) - %msg%n
                [%green(requestId=%X{requestId})] [%blue(ip=%X{ipAddress})] [%yellow(domain=%X{domain})]%n
                [%magenta(ua=%X{userAgent})] [%cyan(os=%X{platform})] [%green(lang=%X{language})]%n
            </pattern>

        </encoder>
    </appender>
    <appender name="ASYNC_SLACK" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="SLACK"/>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
    </appender>

    <logger name = "com.tvb" level="INFO"/>
    <logger name = "com.tvb.Application" level="WARN"/>

    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_SLACK"/>
    </root>
</configuration>
