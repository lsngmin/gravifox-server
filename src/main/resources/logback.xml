<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%-5p) %logger - %m%n</Pattern>
        </layout>
    </appender>
    <logger name="com.tvb.api" level="INFO" />
    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>